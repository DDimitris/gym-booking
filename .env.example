# Example environment variables for gym-booking project
# Copy this file to .env and adjust values as needed.

# Public scheme and host used for realm template, redirects, and frontend environment
PUBLIC_SCHEME=https
PUBLIC_HOST=localhost

# Keycloak image version (used in docker-compose.yml)
KEYCLOAK_VERSION=22.0.1

# Host path for TLS certificates mounted into nginx (frontend). For local dev keep ./certs.
# For production you might set something like:
# CERTS_HOST_PATH=/etc/letsencrypt/live/your-domain.example/
CERTS_HOST_PATH=./certs

# (Optional) Keycloak log level
KC_LOG_LEVEL=DEBUG

# Images (for single compose: build locally with --build or pull from GHCR)
IMAGE_TAG=latest
BACKEND_IMAGE_REPO=ghcr.io/ddimitris/gym-booking-backend
FRONTEND_IMAGE_REPO=ghcr.io/ddimitris/gym-booking-frontend

# Postgres configuration
POSTGRES_IMAGE=postgres:16
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_MULTIPLE_DATABASES=gym_booking,keycloak

# Keycloak database settings
KEYCLOAK_DB_HOST=postgres
KEYCLOAK_DB_PORT=5432
KEYCLOAK_DB_NAME=keycloak
KEYCLOAK_DB_SCHEMA=public
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
KEYCLOAK_REALM=gym-booking
KEYCLOAK_RESOURCE=gym-booking-client
KEYCLOAK_INTERNAL_URL=http://keycloak:8080/auth
KEYCLOAK_PUBLIC_PORT=8180

# Backend datasource settings
BACKEND_DB_HOST=postgres
BACKEND_DB_PORT=5432
BACKEND_DB_NAME=gym_booking
BACKEND_PORT=8080

# Frontend exposed ports
FRONTEND_HTTP_PORT=80
FRONTEND_HTTPS_PORT=443

# Internal service URLs for the frontend container
API_INTERNAL_URL=http://backend:8080
KEYCLOAK_INTERNAL_URL=http://keycloak:8080/auth
